<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".SellerActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2BC0D1"
        android:titleTextColor="#FFFFFF"
        android:elevation="8dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Scrollable Form -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:padding="24dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Description -->
            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Property Description"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textColor="#000000" />

            <!-- Location -->
            <EditText
                android:id="@+id/etLocation"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                android:hint="Location"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textColor="#000000" />

            <!-- Property Image -->
            <ImageView
                android:id="@+id/ivPropertyImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:background="#E0E0E0"
                android:scaleType="centerCrop"
                android:contentDescription="Property Image" />

            <Button
                android:id="@+id/btnSelectImage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:text="Select Image"
                android:background="@drawable/btn_gradient"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnSubmitProperty"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:text="Submit Property"
                android:background="@drawable/btn_gradient_alt"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
